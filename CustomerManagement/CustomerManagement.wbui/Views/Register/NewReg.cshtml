


<div class="h-100 d-flex align-items-center justify-content-center">
	<a class="hiddenanchor" id="signup"></a>
	<a class="hiddenanchor" id="signin"></a>
	<div style="

border-radius: 16px;
box-shadow: 0 4px 15px rgb(106, 90, 205);
backdrop-filter: blur(5.7px);
-webkit-backdrop-filter: blur(5.7px);
border: 1px solid rgba(255, 255, 255, 0.3);" class="animate__animated animate__fadeInDown login_wrapper mt-5">
		<div class="animate form login_form me-4">
			<section class="login_content">
				<form asp-controller="Register" asp-action="NewReg">
					<h1 class="d-flex align-items-center justify-content-center mt-2">
						<svg style="color:rgb(106, 90, 205);" xmlns="http://www.w3.org/2000/svg" width="75" height="70" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
							<path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
							<path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
						</svg>
					</h1>
					<div class="container">
						<div class="row">
							<div class="col text-center">
								<!-- Email input -->
								<div class="form-outline mb-4">
									<input type="text" class="form-control " placeholder="Kullanıcı adı" required="" name="userName" />
									<label class="form-label text-white" for="form2Example1">Kullanıcı Adı</label>
								</div>

								<!-- Password input -->
								<div class="form-outline mb-4">
									<input type="password" class="form-control" placeholder="Şifreniz" required="" name="userPassword" />
									<label class="form-label text-white" for="form2Example2">Password</label>
								</div>

								<!-- 2 column grid layout for inline styling -->
								<div class="row mb-4">
									<div class="col d-flex justify-content-center">
										<!-- Checkbox -->
										<div class="form-check">
											<input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
											<label class="form-check-label text-white" for="form2Example31"> Remember me </label>
										</div>
									</div>

									 
								</div>

								<!-- Submit button -->
								<button type="submit" class="btn btn-primary submit w-75">Login</button>

								
								<!-- Register buttons -->
								 


								<div class="clearfix"></div>

								<div class="separator">
									@if (TempData["Danger"] != null)
									{
										@Html.Raw(TempData["Danger"])
										;
									}

									<div class="clearfix"></div>
									<br />


								</div>
							</div>
						</div>
					</div>
				</form>
			</section>






		</div>


	</div>
</div>