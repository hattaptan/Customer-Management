@model CustomerManagement.Model.Models.Customers

@{
	ViewData["Title"] = "Create2";
}

<style>
	body {
		background-color: #ffffff;
		opacity: 0.8;
		background-image: radial-gradient(#ec00ff 0.5px, #ffffff 0.5px);
		background-size: 10px 10px;
	}
 #customer{
width:45%;
height:auto;
border-radius: 16px;
box-shadow: 0 4px 15px rgb(106, 90, 205);
backdrop-filter: blur(5.7px);
-webkit-backdrop-filter: blur(5.7px);
border: 1px solid rgba(255, 255, 255, 0.3);}

</style>


<h1>Create</h1>

<h4>Customers</h4>
<hr />

<div id ="customer" class="row">
	<div class="col-md-12">
		<form asp-action="Create2">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group m-2">
				<label asp-for="customerCode" class="control-label text-primary"></label>
				<input asp-for="customerCode" class="form-control" />
				<span asp-validation-for="customerCode" class="text-danger"></span>
			</div>
			<div class="form-group m-2">
				<label asp-for="customerTitle" class="control-label text-primary"></label>
				<input asp-for="customerTitle" class="form-control" />
				<span asp-validation-for="customerTitle" class="text-danger"></span>
			</div>
			<div class="form-group m-2">
				<label asp-for="city" class="control-label text-primary"></label>
				<input asp-for="city" class="form-control" />
				<span asp-validation-for="city" class="text-danger"></span>
			</div>
			<div class="form-group m-2">
				<label asp-for="district" class="control-label text-primary"></label>
				<input asp-for="district" class="form-control" />
				<span asp-validation-for="district" class="text-danger"></span>
			</div>
			<div class="form-group m-2">
				<label asp-for="salesAmount" class="control-label text-primary"></label>
				<input asp-for="salesAmount" class="form-control" />
				<span asp-validation-for="salesAmount" class="text-danger"></span>
			</div>
			<div class="form-group m-2 ">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
